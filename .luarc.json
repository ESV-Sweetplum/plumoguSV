{
    "type.castNumberToInteger": true,
    "type.inferParamType": true,
    "type.checkTableShape": true,
    "diagnostics.disable": [
        "lowercase-global",
        "duplicate-set-field",
        "duplicate-doc-alias",
        "unused-local",
        "duplicate-doc-field"
    ],
    "runtime.version": "Lua 5.2",
    "workspace.ignoreDir": [
        ".vscode",
        "plugin.lua"
    ],
    "codeLens.enable": true,
    "workspace.ignoreSubmodules": true,
    "workspace.useGitIgnore": true,
    "diagnostics.globals": [
        "devMode"
    ],
    "addonManager.enable": false,
    "diagnostics.groupSeverity": {
        "type-check": "Error",
        "unused": "Warning",
        "strict": "Error",
        "duplicate": "Warning",
        "ambiguity": "Error",
        "luadoc": "Warning",
        "await": "Error",
        "codestyle": "Error",
        "conventions": "Fallback",
        "global": "Fallback",
        "redefined": "Fallback",
        "strong": "Warning",
        "unbalanced": "Error"
    },
    "diagnostics.libraryFiles": "Disable"
}
